{
	"name": "gallery",
	"version": "1.0.0",
	"description": "What can SKYNovel do? sample project",
	"main": "app.js",
	"appBundleId": "com.fc2.blog.famibee.gallery",
	"appCopyright": "(c)famibee",
	"author": "famibee",
	"license": "MIT",
	"dependencies": {
		"@famibee/skynovel": "^1.17.7",
		"pixi.js": "^6.0.4",
		"three": "^0.131.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.12",
		"@types/node": "^16.4.9",
		"@types/tar-fs": "^2.0.1",
		"@types/three": "^0.130.1",
		"@types/tween.js": "^18.6.1",
		"css-loader": "^6.2.0",
		"electron": "^13.1.7",
		"electron-builder": "^22.11.11",
		"style-loader": "^3.2.1",
		"ts-loader": "^9.2.4",
		"typescript": "^4.3.5",
		"webpack": "^5.47.1",
		"webpack-cli": "^4.7.2",
		"webpack-dev-server": "^3.11.2",
		"workbox-sw": "^6.1.5",
		"workbox-webpack-plugin": "^6.1.5"
	},
	"scripts": {
		"start": "npm run webpack:dev:w & tsc -p core/ -w & npm run watch:wds",
		"webpack:dev": "webpack --config ./core/webpack.config.js",
		"webpack:dev:w": "webpack --config ./core/webpack.config.js --watch",
		"webpack:dev:w_s": "webpack --config ./core/webpack_s.config.js --watch",
		"watch:wds": "webpack-cli serve --config ./core/wds.config.js",
		"watch:wds_s": "webpack-cli serve --config ./core/wds_s.config.js",
		"dev_simple": "npm run webpack:dev:w_s & npm run watch:wds_s",
		"npm_check_updates": "ncu -u --target minor && npm i && npm run build && ncu -g",
		"build": "webpack --mode production --config ./core/webpack.config.js",
		"rebuild": "rm -rf node_modules && rm package-lock.json && npm cache clear --force && npm i && npm run webpack:dev"
	},
	"build": {
		"appId": "com.fc2.blog.famibee.gallery",
		"productName": "SKYNovelギャラリー",
		"directories": {
			"output": "build"
		},
		"files": [
			"app/",
			"app.js",
			"prj/",
			"build/icon/*"
		],
		"dmg": {
			"contents": [
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 220,
					"type": "file"
				}
			]
		},
		"mac": {
			"icon": "build/icon/icon.icns",
			"target": [
				"dmg"
			],
			"category": "public.app-category.games"
		},
		"win": {
			"icon": "build/icon/icon.ico",
			"target": "nsis"
		},
		"linux": {
			"icon": "build/icon",
			"target": [
				"deb",
				"rpm"
			],
			"category": "Network"
		}
	},
	"keywords": [
		"sample",
		"skynovel"
	],
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:famibee/SKYNovel_gallery.git"
	},
	"bugs": {
		"url": "https://github.com/famibee/SKYNovel_gallery/issues",
		"email": "famibee@gmail.com"
	},
	"homepage": "https://famibee.blog.fc2.com/"
}
