{
	"name": "gallery",
	"version": "1.0.0",
	"description": "What can SKYNovel do? sample project",
	"main": "app.js",
	"appBundleId": "com.fc2.blog.famibee.gallery",
	"appCopyright": "(c)famibee",
	"author": "famibee",
	"license": "MIT",
	"dependencies": {
		"@famibee/skynovel": "^1.6.0",
		"crypto-js": "^4.0.0",
		"pixi.js": "^5.3.3",
		"three": "^0.120.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.1",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.10.1",
		"@types/three": "^0.103.2",
		"@types/tween.js": "^18.5.1",
		"css-loader": "^4.3.0",
		"electron": "^10.1.1",
		"electron-builder": "^22.8.1",
		"style-loader": "^1.2.1",
		"typescript": "^4.0.2",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0",
		"workbox-sw": "^5.1.4",
		"workbox-webpack-plugin": "^5.1.4"
	},
	"scripts": {
		"start": "npm run webpack:dev:w & tsc -p core/plugin/ -w & npm run watch:wds",
		"watch:wds": "webpack-dev-server --config ./core/wds.config.js",
		"install": "npm run webpack:dev",
		"webpack:dev": "webpack --mode development --config ./core/webpack.config.js",
		"webpack:dev:w": "webpack --mode development --watch --config ./core/webpack.config.js",
		"start_go": "electron ./",
		"build": "webpack --mode production --config ./core/webpack.config.js",
		"dev_simple": "npm run webpack:dev:w_s & npm run watch:wds_s",
		"watch:wds_s": "webpack-dev-server --config ./core/wds_s.config.js",
		"webpack:dev:w_s": "webpack --mode development --watch --config ./core/webpack_s.config.js",
		"npm_check_updates": "ncu",
		"npm_check_updates -g": "ncu -g",
		"npm_check_updates_do": "ncu -a && npm update && npm i -D",
		"rebuild": "rm -rf node_modules && rm package-lock.json && npm cache clear --force && npm i"
	},
	"build": {
		"appId": "com.fc2.blog.famibee.gallery",
		"productName": "SKYNovelギャラリー",
		"directories": {
			"output": "build"
		},
		"files": [
			"app/",
			"app.js",
			"prj/",
			"build/icon/*"
		],
		"dmg": {
			"contents": [
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 220,
					"type": "file"
				}
			]
		},
		"mac": {
			"icon": "build/icon/icon.icns",
			"target": [
				"dmg"
			],
			"category": "public.app-category.games"
		},
		"win": {
			"icon": "build/icon/icon.ico",
			"target": "nsis"
		},
		"linux": {
			"icon": "build/icon",
			"target": [
				"deb",
				"rpm"
			],
			"category": "Network"
		}
	},
	"keywords": [
		"sample",
		"skynovel"
	],
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:famibee/SKYNovel_gallery.git"
	},
	"bugs": {
		"url": "https://github.com/famibee/SKYNovel_gallery/issues",
		"email": "famibee@gmail.com"
	},
	"homepage": "https://famibee.blog.fc2.com/"
}
